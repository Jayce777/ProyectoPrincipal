<div class="container p-3" style="width:30%">
<!-- /.login-logo -->
<%- include('../partials/messages'); -%>

  <div class="card text-center">
  <div class="card-header">
        <h3 class="login-box-msg">PryNodeJs2</h3>
  </div>
    <div class="card-body">

      <form action="/autentication/login" method="POST">
        <div class="input-group mb-3">
          <input type="text" class="form-control" name="usuusuario" placeholder="Usuario">
          <div class="input-group-append">
            <div class="input-group-text">
            <i class="fa fa-user" aria-hidden="true"></i>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" name="usucontrasena" placeholder="Contraseña">
          <div class="input-group-append">
            <div class="input-group-text">
            <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
          </div>
        </div>
            <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
      </form>
      <br>
